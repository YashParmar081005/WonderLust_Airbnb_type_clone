<% layout("layouts/boilerplate") %>

<div class="row mt-3">
    <h3 class="col-6 offset-3">Login</h3>
    <div class="col-6 offset-3" >
        <form action="/login" method="POST" novalidate class="needs-validation">
        <div class="mb-3">
        <label for="title" class="form-label">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="title" class="form-label">Password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </div>
        <button class="btn btn-dark edit-btn mt-3">Login</button>

        </form>
    </div>
</div>
